# Database (Neon Postgres recommended; use the pooled endpoint)
# Format: postgresql+psycopg://USER:PASSWORD@HOST/DBNAME?sslmode=require&channel_binding=require
DATABASE_URL=postgresql+psycopg://your_neon_user:your_password@your_neon_host/your_db?sslmode=require&channel_binding=require

# JWT for custom auth
JWT_SECRET=change-me-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Twilio WhatsApp (optional for alerts)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# Gemini API (optional for agentic mission summaries)
GEMINI_API_KEY=
